#!/usr/bin/env ruby
require_relative '../lib/chess'
require_relative '../lib/gui/ruby2d_renderer'

begin
  game = Chess::Game.new
  renderer = Chess::GUI::Ruby2DRenderer.new(game)
  renderer.start
rescue Exception => e
  warn "Failed to start GUI: #{e.message}"
  warn e.backtrace.join("\n")
  exit 1
end
